            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/imageViewExperience1"
            app:layout_constraintTop_toBottomOf="@+id/textViewSpecialty1" />

        <ImageView
