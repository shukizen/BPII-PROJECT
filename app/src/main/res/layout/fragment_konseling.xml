            app:layout_constraintStart_toEndOf="@+id/imageViewProfile1"
            app:layout_constraintTop_toBottomOf="@+id/textViewName1" />

        <!-- Garis Pemisah -->

        <!-- Rating dan Pengalaman -->

        <!-- Waktu Konsultasi -->

        <View
