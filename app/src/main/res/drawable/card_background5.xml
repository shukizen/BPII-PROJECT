<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape>
            <padding
                android:bottom="2dp" /> <!-- Adjust shadow size here -->
            <solid android:color="#33000000" /> <!-- Shadow color (semi-transparent black) -->
            <corners
                android:bottomLeftRadius="16dp"
                android:bottomRightRadius="16dp" /> <!-- Bottom rounded corners -->
        </shape>
    </item>

    <!-- Background Layer -->
    <item android:bottom="2dp"> <!-- Adjust to match shadow size -->
        <shape>
            <solid android:color="@color/oren" /> <!-- Background color -->
            <corners
                android:bottomLeftRadius="16dp"
                android:bottomRightRadius="16dp" /> <!-- Bottom rounded corners -->
        </shape>
    </item>
</layer-list>