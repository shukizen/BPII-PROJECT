<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape>
            <solid android:color="#80000000" /> <!-- Hitam semi transparan -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Main Shape Layer -->
    <item  android:bottom="4dp">
        <shape>
            <solid android:color="@color/white" /> <!-- Warna utama -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>